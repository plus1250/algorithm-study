import java.util.Scanner;

public class Main {
 
	public static void main(String[] args) {
 
		Scanner in = new Scanner(System.in);
		
		int a = in.nextInt();
		int answer = 0;
		
		for(int i = 0; i <= a ; i ++) {
		answer += i ;	
			
		}
		
		in.close();
		
		System.out.println(answer);
		
		
		}
}
